<h1><%= @user.first_name.capitalize.to_s %>'s Profile</h1>

<% if @user.image.present? %>
<%= image_tag @user.image, :alt => @user.first_name, :class => "img-thumbnail" %>
<% end %>

<div class="container">
    <div class="span3 well">
        <center>
        <h3><%= @user.first_name.capitalize.to_s %> <%= @user.last_name.capitalize.to_s %></li></h3>
		</center>
    </div>


<ul>
  <li>Full Name: <%= @user.first_name.capitalize.to_s %> <%= @user.last_name.capitalize.to_s %></li>
  <li>Bio: <%= @user.bio %></li>
  <li>Where I Live: <%= @user.country.capitalize.to_s %></li>
</ul>


<% if @user.country.present? %>
  <div id="map"></div> <!--need predefined height to display content, otherwise it won't expand-->

  <script>
      var map;
      function initMap() {
        map = new google.maps.Map(document.getElementById('map'), {
          center: {
            lat: <%= @latitude %>,
            lng: <%= @longitude %>,
          },
          zoom: 8
        });
      }
    </script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCRXwg_OQijgCBgFl1XoVh63khQf0Ojz7A&callback=initMap"
    async defer></script>

<% end %>

<button id="get-quote">Get your Swanson on</button>
<p id="quote">Getting quote...</p>

<div class="controls">
  <%= link_to 'Edit Profile', edit_user_path(@user) %>
  <%= link_to 'Delete Profile', user_path(@user), :method => 'delete', :data => { :confirm => 'Are you sure?' } %>
</div>
</div>
