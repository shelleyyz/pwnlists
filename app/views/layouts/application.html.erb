<!DOCTYPE html>
<html>
  <head>
    <title>Pwnlists</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>
  <body>
    <div class="container">
      <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
        </button>
      <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
      <% if @current_user.present? %>
        <li class="nav-item active brand">
          <%= link_to "PwnLists", root_path, :class => "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Edit Profile", @current_user, :class => "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Create List", new_list_path, :class => "nav-link"%>
        </li>
        <li class="nav-item">
          <%= link_to "Add Game", new_game_path, :class => "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "All Games", games_path, :class => "nav-link"%>
        </li>
        <li class="nav-item">
          <%= link_to "All Lists", lists_path, :class => "nav-link"%>
        </li>
        <li class="nav-item">
          <%= link_to "Sign out #{ @current_user.first_name }", login_path, :method => 'delete', :class => "nav-link"%>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to 'Sign up', new_user_path, :class => "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to 'Sign in', login_path, :class => "nav-link" %>
        </li>
      <% end %>

      </ul>
    </div>
  </nav>
    <%= yield %>
  </body>
</html>
