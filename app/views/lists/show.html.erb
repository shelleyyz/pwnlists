<h1><%= @list.name %></h1>

  <% if @name.first_name.present? %>
    <h2>Created By: <%= link_to @name.first_name, user_path(@list.user_id) %></h2>
  <% end %>

  <p>Description: <%= @list.description %></p>

<% @list.games.each do |game| %>

  <%= link_to image_tag(game.image, :class => 'img-thumbnail'), game %>

<% end %>

<div class="controls">
  <%= link_to "Edit PwnList", edit_list_path(@list) %>
  <% if @current_user.admin? %>
  <%= link_to "Delete PwnList", list_path(@list), :method => 'delete', :data => { :confirm => 'Are you sure?' } %>
  <% end %>
</div>
