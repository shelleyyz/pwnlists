<%= form_for @list do |f| %>

  <%= f.label :name, :autofocus => true%>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

<%# create ability for user to add game to list , add ids to joining table %>
<div class="form-check">
<label class="form-check-label" for="defaultCheck1">
  <%= f.label "Games" %>
</label>
<input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
  <%= f.collection_check_boxes :game_ids, Game.all, :id, :title %>
</div>

<%= f.submit %>

<% end %>
