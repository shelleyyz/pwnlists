<%= form_for @list do |f| %>

<div class="form-group">

  <%= f.label :name, :autofocus => true%>

  <%= f.text_field :name, :class => "form-control" %>
  <small id="passwordHelpInline" class="text-muted">
      Be creative! Example: Thought-Provoking Nonviolent Games for Tweens and Teens
  </small>

</div>

<div class="form-group">


  <%= f.label :description %>

  <%= f.text_area :description, :class => "form-control" %>
  <small id="passwordHelpInline" class="text-muted">
      How would you describe your list?
  </small>

</div>

<div class="form-check">

  <label class="form-check-label">
    <%= f.label "Add games below." %>
  </label>
</div>

<div class="form-check">
  <%= f.collection_check_boxes :game_ids, Game.all, :id, :title do |b| %>
    <%= b.check_box %>
<label class="form-check-label">
    <%= b.label %>
</label>

<br>

<% end %>

</div>

<br>
<%= f.submit :class => "btn btn-primary" %>

<% end %>
