<h1>Log In</h1>

<h2><%= flash[:error] %></h2>

<%= form_tag login_path, :class => "form-inline" do %>
  <div class="input-group"></div>
  <%= label_tag :email %>
  <%= email_field_tag :email, nil, :class => 'form-control'%>
  </div>
  <%= label_tag :password %>
  <%= password_field_tag :password %>

  <%= submit_tag "Log in", :class => "btn btn-primary" %>

<% end %>
