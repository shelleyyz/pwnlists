<h1>PwnLists</h1>
<h3>Log in</h3>

<h2><%= flash[:error] %></h2>

<%= form_tag login_path do %>
<div class="form-group">
  <%= label_tag :email %>
</div>
<div class="form-group">
  <%= email_field_tag :email, nil, :class => 'form-control', :placeholder => 'glhf@ga.co'%>
</div>
<div class="form-group">
  <%= label_tag :password %>
</div>
<div class="form-group">
  <%= password_field_tag :password, nil, :class => 'form-control' %>
</div>
<small id="passwordHelpInline" class="text-muted">
    Don't have an account? <%= link_to 'Sign up here!', new_user_path %>
</small>

<br>
<br>
<br>

<%= submit_tag "Log in", :class => "btn btn-primary" %>

<% end %>
