<h1>Log In</h1>

<h2><%= flash[:error] %></h2>

<%= form_tag login_path, :class => "form-inline" do %>
<div class="form-group">
  <%= label_tag :email %>
</div>
<div class="form-group">
  <%= email_field_tag :email, nil, :class => 'form-control'%>
</div>
<div class="form-group">
  <%= label_tag :password %>
</div>
<div class="form-group">
  <%= password_field_tag :password, nil, :class => 'form-control' %>
</div>

<%= submit_tag "Log in", :class => "btn btn-primary" %>

<% end %>
